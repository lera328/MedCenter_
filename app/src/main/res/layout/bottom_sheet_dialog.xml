<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/btOk"
    android:background="@drawable/bottom_sheet_bascgraund">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="8"
    android:layout_marginTop="20sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="28dp"
        android:text="TextView"
        />

    <ImageButton
        android:id="@+id/btClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/img_close"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
    android:background="@color/transporent"/>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:id="@+id/tvOpisanie"
        android:text="textVievOpisanie"
        android:textColor="@color/black"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:text="Подготовка"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"/>

    <TextView
        android:id="@+id/tvPodgotovka"
        android:layout_marginTop="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textViewPodgotovka"
        android:textColor="@color/black"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Результаты через:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Биоматериал:" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvKDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="textDay"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvBiomaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="textBiomaterial" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/buttonGet"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:background="@drawable/button_blue"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Button"
        android:layout_marginBottom="20sp"/>

</LinearLayout>